<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".Add_Courses" >

    <TextView
        android:id="@+id/lbl_addcourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Add Courses"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_lecname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_courseno"
        android:layout_below="@+id/txt_courseno"
        android:layout_marginTop="36dp"
        android:text="Lecturer Name : "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lbl_coursetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_coursename"
        android:layout_below="@+id/txt_hm_desc"
        android:layout_marginTop="39dp"
        android:text="Number of\nCredits              :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/txt_hm_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_lec_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_lec_name"
        android:layout_marginTop="16dp"
        android:ems="10" />

    <TextView
        android:id="@+id/lbl_coursename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_hm_desc"
        android:layout_alignLeft="@+id/lbl_lecname"
        android:text="Course Name   : "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/txt_lec_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_lecname"
        android:layout_alignLeft="@+id/txt_courseno"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/txt_courseno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lbl_addcourses"
        android:layout_marginTop="16dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lbl_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_coursetype"
        android:layout_below="@+id/lbl_coursetype"
        android:layout_marginTop="41dp"
        android:text="Room No          :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/txt_num_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_coursetype"
        android:layout_alignBottom="@+id/lbl_coursetype"
        android:layout_alignLeft="@+id/txt_hm_desc"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/txt_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_room"
        android:layout_alignBottom="@+id/lbl_room"
        android:layout_alignLeft="@+id/txt_num_credits"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <Button
        android:id="@+id/btn_add_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_room"
        android:layout_marginTop="37dp"
        android:text="Class Time" />

    <Button
        android:id="@+id/btn_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_add_schedule"
        android:layout_alignBottom="@+id/btn_add_schedule"
        android:layout_alignParentRight="true"
        android:text="Course Policy" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_policy"
        android:layout_marginTop="29dp"
        android:text="Add" />

    <TextView
        android:id="@+id/lbl_courseno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_courseno"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:text="Course Number :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>