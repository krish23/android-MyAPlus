<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/lbl_gr_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="15dp"
        android:text="Enter Grades"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txt_gr_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_gr_assign"
        android:layout_below="@+id/lbl_gr_assign"
        android:layout_marginTop="27dp"
        android:text="Course         :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lbl_gr_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_gr_cat"
        android:layout_below="@+id/txt_gr_cat"
        android:layout_marginTop="34dp"
        android:text="Description  :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_gr_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_gr_course"
        android:layout_below="@+id/txt_gr_course"
        android:layout_marginTop="34dp"
        android:text="Category      :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/out_gr_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_gr_cat"
        android:layout_alignRight="@+id/out_gr_course"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/out_gr_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_gr_desc"
        android:layout_alignBottom="@+id/lbl_gr_desc"
        android:layout_alignRight="@+id/out_gr_cat"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lbl_gr_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_gr_desc"
        android:layout_below="@+id/lbl_gr_desc"
        android:layout_marginTop="38dp"
        android:text="Points for this Home Work       :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btn_gr_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="46dp"
        android:layout_marginRight="17dp"
        android:text="Save" />

    <EditText
        android:id="@+id/txt_gr_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_gr_points"
        android:layout_alignRight="@+id/lbl_gr_desc"
        android:layout_below="@+id/lbl_gr_points"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/lbl_gr_sl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_gr_points"
        android:layout_toRightOf="@+id/txt_gr_points"
        android:text="/"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/txt_gr_po"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/lbl_gr_points"
        android:layout_alignTop="@+id/lbl_gr_sl"
        android:layout_toRightOf="@+id/lbl_gr_sl"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/out_gr_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_gr_course"
        android:layout_alignBottom="@+id/txt_gr_course"
        android:layout_alignRight="@+id/lbl_gr_points"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>